<div>
  <%= link_to("<< Back to List", list_campaigns_path, :class => 'back-link') %>
</div>
<div>
  <%= link_to("<< Back to Campaign", campaign_path(@campaign), :class => 'back-link') %>
</div>

<div class="page-header">
	<h1><%= @campaign.name %></h1>
</div>


<div class="campaign settings">  
	<%= form_for(:campaign, :url => {:action => 'update_settings', :id => @campaign.id}) do |f| %>

	<div class="col-md-9 col-sm-9">
		<%= render(:partial => "options", :locals => {:f => f}) %>


					<%= submit_tag("Save Settings", class:'btn btn-primary') %>

					<%= link_to("Test Email", {:controller => 'email', :action => 'send_email', :id => @campaign.id}, class:'btn', :method => :post) %> 

					<%= link_to("Launch Email", {:controller => 'email', :action => 'launch_email', :id => @campaign.id}, class:'btn', :confirm => 'Are you sure you want to launch the phishing campaign?', :method => :post) %> 

					<%= link_to("Edit Email", {:controller => 'templates', :action => 'edit_email', :id => @campaign.template_id}, class:'btn') %> 

					<%= link_to("Preview", {:controller => 'templates', :action => 'preview_email', :id => @campaign.id}, class:'btn') %> 

		<% end %>
	</div>
</div>

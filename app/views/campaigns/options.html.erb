<% @page_title = "Campaign Settings" %>

<style>
	<div class="accordion"> #accordion </div>
</style>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="campaign settings">  
  <%= form_for(:campaign, :url => {:action => 'update_settings', :id => @campaign.id}) do |f| %>

  <%= render(:partial => "options", :locals => {:f => f}) %>

	<table>
		<tr>
			<td>
				<div class="form-buttons">
					<%= submit_tag("Save Settings", :class => 'action') %>
				</div>
			</td>

			<td>
				<div class="form-buttons">
					<%= link_to("Test Email", {:controller => 'email', :action => 'send_email', :id => @campaign.id}, :class => 'action') %> 
				</div>
			</td>

			<td>
				<div class="form-buttons">
					<%= link_to("Launch Email", {:controller => 'email', :action => 'launch_email', :id => @campaign.id}, :class => 'action', :confirm => 'Are you sure you want to launch the phishing campaign?') %> 
				</div>
			</td>

			<td>
				<div class="form-buttons">
					<%= link_to("Edit Template", {:controller => 'templates', :action => 'edit_email', :id => @campaign.id}, :class => 'action') %> 
				</div>
			</td>

			<td>
				<div class="form-buttons">
					<%= link_to("Preview", {:controller => 'templates', :action => 'preview_email', :id => @campaign.id}, :class => 'action') %> 
				</div>
			</td>
		</tr>
	</table>

  <% end %>
</div>

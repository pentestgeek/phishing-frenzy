<% @page_title = "Reports" %>

<div class="page-header">
  <h2>Reports</h2>  
</div>

<div><%= pluralize(@campaigns.size, 'campaign') %> launched</div>

<%= paginate @campaigns, :theme => 'twitter-bootstrap-3' %>

<% if @campaigns.size > 0 %>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Client</th>
      <th>Emails Sent</th>
      <th>Clicks</th>
      <th>Active</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
    <tr>
      <td><span class="glyphicon glyphicon-stats"></span></td>      
      <td><%= campaign.name %></td>
      <td><%= Campaign.sent(campaign) %></td>
      <td><%= Campaign.clicks(campaign) %></td>
      <td><%= campaign.active ? image_tag('green-light.png', :size => '11x11') : image_tag('red-light.png', :size => '11x11') %></td>
      <td class="actions">
        <%= link_to("Stats", stats_reports_path(id: campaign.id), 
              :class => 'btn btn-primary btn-xs') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>